                <h4>Get In Touch</h4>
<% if @errors.present? %>
  <div class="alert alert-danger" role="alert">
    <% @errors.each do |error| %>
      <%= error %><br/>
    <% end %>
  </div>
<% end %>
<% if notice.present? %>
  <div class="alert alert-success" role="alert">
    <%= notice %><br/>
  </div>
<% end %>
                <%= form_tag(contacts_path, method: :post, html: {class: "contact-form"}) do |f| %>
                    <fieldset>
                        <div>
                            <%= text_field_tag "cName", '', class:"full-width", placeholder:"Your Name*" %>
                        </div>

                        <div class="form-field">
                            <%= text_field_tag "cEmail", '', class:"full-width", placeholder:"Your Email*" %>
                        </div>

                        <div class="form-field">
                            <%= text_field_tag "cWebsite", '', class:"full-width", placeholder:"Website" %>
                        </div>

                        <div class="message form-field">
                            <%= text_area_tag "cMessage", '', class:"full-width", placeholder:"Your Message*" %>
                        </div>

                            <%= submit_tag "Send Message", class:"submit btn btn--primary btn--large full-width" %>

                    </fieldset>
                <% end %>

            </div> <!-- s-content__main -->
        </div> <!-- end row -->

    </section> <!-- end s-content -->


